<?xml version="1.0" encoding="utf-8"?>
  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        android:padding="5sp"
        >
     <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_weight="1"
                        android:text="Dhaka"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/bttext_size"
                        android:background="@color/colorIndigo"
                        android:layout_margin="@dimen/padding_bot"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_weight="1"
                        android:text="Faridpur"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/bttext_size"
                        android:background="@color/colorRed"
                        android:layout_margin="@dimen/padding_bot"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_weight="1"
                        android:text="Gazipur"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/bttext_size"
                        android:background="@color/colorDorange"
                        android:layout_margin="@dimen/padding_bot"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_margin="@dimen/padding_bot"
                        android:layout_weight="1"
                        android:text="Gopalganj"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/bttext_size"
                        android:background="@color/colorAccent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_margin="@dimen/padding_bot"
                        android:layout_weight="1"
                        android:text="Kishoreganj"
                        android:textSize="@dimen/bttext_size"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorPink"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_margin="@dimen/padding_bot"
                        android:layout_weight="1"
                        android:text="Madaripur"
                        android:textSize="@dimen/bttext_size"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorPurple"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_margin="@dimen/padding_bot"
                        android:layout_weight="1"
                        android:text="Manikganj"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/bttext_size"
                        android:background="@color/colorBlue"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_margin="@dimen/padding_bot"
                        android:layout_weight="1"
                        android:text="Munshiganj"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/bttext_size"
                        android:background="@color/colorRed"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_margin="@dimen/padding_bot"
                        android:layout_weight="1"
                        android:text="Narayanganj"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/bttext_size"
                        android:background="@color/colorPrimary"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_heightDL"
                        android:layout_margin="@dimen/padding_bot"
                        android:layout_weight="1"
                        android:text="Narsingdi"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/bttext_size"
                        android:background="@color/colorAccent"/>

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heightDL"
                    android:layout_margin="@dimen/padding_bot"
                    android:layout_weight="1"
                    android:text="Rajbari"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/bttext_size"
                    android:background="@color/colorPrimary"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_heightDL"
                    android:layout_margin="@dimen/padding_bot"
                    android:layout_weight="1"
                    android:text="Shariatpur"
                    android:textSize="@dimen/bttext_size"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorAccent"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:background="@color/colorRed"
                    android:text="Tangail"
                    android:textSize="@dimen/bttext_size"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>

        </LinearLayout>

       </RelativeLayout>

    </ScrollView>
